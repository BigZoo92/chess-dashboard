{
  auto_https off
}

:80 {
  encode zstd gzip

  @api path /api/* /health
  handle @api {
    reverse_proxy api:3001
  }

  @dashboardDevAssets path /assets/* /@vite* /@react-refresh /src/* /node_modules/*
  handle @dashboardDevAssets {
    reverse_proxy web:5173
  }

  @dashboard path /dashboard*
  handle @dashboard {
    reverse_proxy web:5173
  }

  handle {
    reverse_proxy landing:4321
  }
}
